<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<style>
  /* General Styling */
  body {
    font-family: "Poppins", sans-serif;
    background: #f9f9f9;
    color: #333;
  }

  .chef-section {
    text-align: center;
    padding: 60px 10%;
    background: linear-gradient(to right, #222, #444);
    color: white;
  }

  .chef-section h1 {
    font-family: "Great Vibes", cursive;
    font-size: 50px;
    font-weight: bold;
    margin-bottom: 50px;
  }

  .chef-card {
    background: white;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .chef-card img {
    width: 100%;
    border-radius: 10px;
    transition: transform 0.3s ease;
  }

  .chef-card h4 {
    font-size: 22px;
    margin-top: 15px;
    font-weight: bold;
    color: #222;
  }

  .chef-card p {
    font-size: 16px;
    color: #777;
  }

  /* Hover Effects */
  .chef-card:hover {
    transform: translateY(-10px);
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
  }

  .chef-card:hover img {
    transform: scale(1.05);
  }
</style>

<section class="container-fluid chef-section">
  <h1>Our Master Chef</h1>
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="chef-card">
        <img src="../images/chef1.webp" class="img-fluid" alt="John Smooth" />
        <h4>John Smooth</h4>
        <p>Restaurant Owner</p>
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="chef-card">
        <img src="../images/chef2.webp" class="img-fluid" alt="Rebeca Welson" />
        <h4>Rebeca Welson</h4>
        <p>Head Chef</p>
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="chef-card">
        <img src="../images/chef3.webp" class="img-fluid" alt="Kharl Branyt" />
        <h4>Kharl Branyt</h4>
        <p>Chef</p>
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="chef-card">
        <img src="../images/chef4.webp" class="img-fluid" alt="Luke Simon" />
        <h4>Luke Simon</h4>
        <p>Chef</p>
      </div>
    </div>
  </div>
</section>

  rel="stylesheet"
/>

<style>
  nav {
    background: rgba(0, 0, 0, 0.3);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    height: auto;
    position: absolute;
    width: 100%;
    z-index: 1000;
    backdrop-filter: blur(8px);
  }

  .navbar-nav {
    display: flex;
    gap: 2rem;
    justify-content: center; /* Centers the links */
    width: 100%; /* Ensures full width */
  }

  .navbar-container {
    display: flex;
    align-items: center;
    justify-content: center; /* Centers content */
    width: 100%;
  }

  .navbar-container ul li a {
    font-size: 1.2rem;
    color: #fff;
    position: relative;
    transition: all 0.3s ease-in-out;
  }

  .navbar-container ul li a::after {
    content: "";
    display: block;
    height: 3px;
    width: 0;
    background: #ff5600;
    transition: width 0.3s ease-in-out;
    position: absolute;
    bottom: -5px;
    left: 0;
  }

  .navbar-container ul li a:hover {
    color: #ff5600;
    font-weight: 600;
  }

  .navbar-container ul li a:hover::after {
    width: 100%;
  }

  .navbar-brand img {
    padding-left: 1.6rem;
  }

  .navbar-container button {
    white-space: nowrap;
    background: none;
    border: 1px solid #ff5600;
    padding: 1.2rem 2.6rem;
    font-size: 18px;
    border-radius: 8px;
    color: #fff;
  }

  .navbar-container button:hover {
    background-color: #ff5600;
    transition: 0.3s ease-in;
  }

  .navbar-toggler-icon {
    filter: invert(100%); /* Changes color to white */
  }

  @media (max-width: 991px) {
    .navbar-nav {
      gap: 0.2rem;
    }
    .navbar-container button {
      display: none;
    }
  }
</style>

<nav class="navbar navbar-expand-lg position-fixed top-0 w-100">
  <div class="container-fluid">
    <a class="navbar-brand" href="/index.ejs">
      <img src="../images/logo.webp" alt="Logo" />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="navbar-container ms-auto mb-2 mb-lg-0">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/menu">Menu</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link" href="/blog">Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
        <a href="#book_table">
          <button>Book a Table</button>
        </a>
      </div>
    </div>
  </div>
</nav>

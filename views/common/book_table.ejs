<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<style>
  .booking-section {
    background: #f8f9fa;
    padding: 50px 20px;
    text-align: center !important;
  }

  .booking-section h1 {
    font-size: 3rem;
    margin-bottom: 30px;
    color: #333 !important;
    font-weight: 600;
    font-family: cursive;
  }

  .booking-form {
    max-width: 800px;
    margin: auto !important;
  }

  .booking-form .form-control {
    padding: 12px;
    font-size: 1.1rem;
    border-radius: 8px;
  }

  .booking-form button {
    background: #ff5600;
    color: #fff;
    font-size: 1.2rem;
    padding: 12px;
    border: none;
    border-radius: 8px;
    transition: 0.3s;
  }

  .booking-form button:hover {
    background: #e04e00;
  }
</style>

<section class="container-fluid booking-section" id="book_table">
  <h1>Book a Table</h1>
  <form class="booking-form row g-3">
    <div class="col-sm-12 col-md-6">
      <input
        type="date"
        class="form-control"
        placeholder="Select Date"
        required
      />
    </div>
    <div class="col-sm-12 col-md-6">
      <input
        type="time"
        class="form-control"
        placeholder="Select Time"
        required
      />
    </div>
    <div class="col-sm-12 col-md-6">
      <input
        type="text"
        class="form-control"
        placeholder="Full Name"
        required
      />
    </div>
    <div class="col-sm-12 col-md-6">
      <input
        type="tel"
        class="form-control"
        placeholder="Phone Number"
        required
      />
    </div>
    <div class="col-sm-12">
      <input
        type="email"
        class="form-control"
        placeholder="Email Address"
        required
      />
    </div>
    <div class="col-sm-12 col-md-6">
      <select class="form-control" required>
        <option value="" disabled selected>Number of Persons</option>
        <option value="1">1 Person</option>
        <option value="2">2 Persons</option>
        <option value="3">3 Persons</option>
        <option value="4">4 Persons</option>
        <option value="5">5 Persons</option>
        <option value="6">6 Persons</option>
        <option value="7">7 Persons</option>
        <option value="8">8 Persons</option>
        <option value="9">9 Persons</option>
        <option value="10">10 Persons</option>
        <option value="9">11 Persons</option>
        <option value="10">12 Persons</option>
      </select>
    </div>
    <div class="col-12">
      <button type="submit" class="btn w-100">Confirm Booking</button>
    </div>
  </form>
</section>

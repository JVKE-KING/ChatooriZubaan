<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Details</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      /* Custom Styles */
      .navbar {
        background: linear-gradient(to right, #ff512f, #dd2476);
        padding: 10px;
      }
      .navbar-brand {
        font-size: 1.8rem;
        font-weight: bold;
        color: white !important;
      }
      .nav-link {
        color: white !important;
        font-size: 1.1rem;
        margin: 0 10px;
      }
      .nav-link:hover {
        text-decoration: underline;
      }
      /* Search Bar Styling */
      .search-container {
        position: relative;
        max-width: 250px;
      }
      .search-input {
        width: 100%;
        padding: 8px 35px 8px 15px;
        border-radius: 20px;
        border: none;
        outline: none;
      }
      .search-icon {
        position: absolute;
        top: 50%;
        right: 12px;
        transform: translateY(-50%);
        color: gray;
      }
      .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
      }
      .product-container {
        min-height: 80vh;
      }
    </style>
  </head>
  <body>
    <!-- Header Section -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
      <div class="container">
        <!-- Logo -->
        <a class="navbar-brand fw-bold" href="#">üõçÔ∏è Product Details</a>

        <!-- Mobile Toggle -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Categories</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Offers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Contact</a>
            </li>
          </ul>

          <!-- Search Bar -->
          <div class="search-container ms-3">
            <input
              class="form-control search-input"
              type="search"
              placeholder="Search product..."
            />
            <i class="fas fa-search search-icon"></i>
          </div>
        </div>
      </div>
    </nav>

    <!-- Product Details Section -->
    <div class="container py-4">
      <% if (productDetails) { %>
      <div class="row product-container align-items-center">
        <!-- Left: Product Image -->
        <div class="col-md-5">
          <img
            src="/<%= productDetails.image %>"
            alt="Product Image"
            width="500px"
          />
        </div>

        <!-- Right: Product Details -->
        <div class="col-md-7 d-flex align-items-center">
          <div>
            <h1 class="text-primary fw-bold"><%= productDetails.dishName %></h1>
            <p class="text-success fs-5">
              <strong>Offer:</strong> <%= productDetails.offer %>
            </p>
            <p class="text-muted fs-5">
              <strong>Category:</strong> <%= productDetails.category %>
            </p>
            <p class="text-danger fs-5">
              <strong>Price:</strong> <%= productDetails.price %>
            </p>
            <p class="fs-5">
              <strong>Ingredients:</strong> <%= productDetails.ingredients %>
            </p>
            <p class="fs-5">
              <strong>Description:</strong> <%= productDetails.description %>
            </p>
            <p class="fs-5">
              <strong>Spicy Level:</strong> <%= productDetails.spicyLevel %>
            </p>
            <p class="fs-5">
              <strong>Vegan Friendly:</strong> <%= productDetails.vegan ? "Yes"
              : "No" %>
            </p>
          </div>
        </div>
      </div>
      <% } else { %>
      <div class="row">
        <div class="col-12 text-center">
          <p class="alert alert-warning">No record found</p>
        </div>
      </div>
      <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

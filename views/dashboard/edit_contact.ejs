<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<div class="container-fluid" style="padding: 0 500px; margin-top: 50px">
  <form method="post">
    <div class="form-group mb-3">
      <label for="name" class="fw-bold">Username</label>
      <input
        type="text"
        name="name"
        value="<%=editConctactdata.name %>"
        class="form-control rounded-pill p-2"
        placeholder="Enter your username"
        required
      />
    </div>
    <div class="form-group mb-3">
      <label for="email" class="fw-bold">Email</label>
      <input
        type="email"
        name="email"
        value="<%=editConctactdata.email %>"
        class="form-control rounded-pill p-2"
        placeholder="Enter your email"
        required
      />
    </div>
    <div class="form-group mb-3">
      <label for="number" class="fw-bold">Number</label>
      <input
        type="number"
        name="number"
        value="<%=editConctactdata.number %>"
        class="form-control rounded-pill p-2"
        placeholder="Enter your number"
        required
      />
    </div>
    <div class="form-check mb-3">
      <input
        class="form-check-input"
        type="checkbox"
        id="termsCheck"
        required
      />
      <label class="form-check-label" for="termsCheck">
        I agree to the
        <a href="#" class="text-primary fw-bold">Terms & Conditions</a>
      </label>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">
        Sign Up
      </button>
    </div>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

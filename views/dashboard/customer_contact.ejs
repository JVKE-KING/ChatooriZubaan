<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #20304c !important;
        color: #fff !important;
        font-family: "Arial", sans-serif;
      }

      .dashboard {
        padding-top: 70px;
      }
      .table-container { 
        max-width: 100vw;
        height: 75vh;
        background-color: #0c1a32;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
      }
      .table-responsive {
        overflow-x: hidden;
      }
      table {
        width: 100%;
        border-radius: 10px;
        overflow: hidden;
      }
      thead {
        background-color: #1d2a47;
        color: #f8f9fa;
      }
      tbody tr:hover {
        background-color: #254068;
        transition: 0.3s ease-in-out;
      }
      th,
      td {
        text-align: center;
        padding: 12px;
      }
      img {
        width: 80px;
        border-radius: 8px;
        transition: transform 0.3s;
      }
      img:hover {
        transform: scale(1.1);
      }
      h2 {
        text-shadow: 2px 2px 5px rgba(255, 255, 255, 0.3);
      }

      @media (max-width: 991px) {
        .mobile {
          position: fixed;
          left: 0;
          width: 100vw;
        }
      }
      @media (max-width: 768px) {
        .mobile {
          padding-left: 0px !important;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-fluid py-3">
      <div class="row">
        <div class="col-3 p-0">
          <%- include ("dashboard-common/left_menu") %>
        </div>
        <div class="col-9 p-0">
          <%- include ("dashboard-common/header") %>
          <div class="container-fluid dashboard">
            <div class="mobile">
              <h2 class="text-center mb-4">Contact </h2>
              <% if(customerData.length>0){ %>
              <div class="table-responsive table-container">
                <table class="table-bordered table-hover">
                  <thead>
                    <tr>
                      <th class="text-center">Customer Name</th>
                      <th class="text-center">Customer Email</th>
                      <th class="text-center">Phone Number</th>
                      <th class="text-center">Message</th>
                      <th class="text-center">Edit</th>
                      <th class="text-center">Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0; i<customerData.length; i++){%>
                      <tr>
                        <td><%= customerData[i].name %></td>
                        <td><%= customerData[i].email %></td>
                        <td><%= customerData[i].number %></td>
                        <td><%= customerData[i].message %></td>
                        <td>
                          <a href="/edit2/<%= customerData[i]._id %>" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                          </a>
                        </td>
                        <td>
                          <a href="/delete2/<%= customerData[i]._id %>" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                          </a>
                        </td>
                    <% } %>

                    </tbody>
                  </table>
               <% } else { %>
              No record found
            
            <%} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

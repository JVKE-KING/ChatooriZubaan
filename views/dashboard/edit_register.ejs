<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<div class="container-fluid" style="padding: 0 500px; margin-top: 50px">
  <form method="post">
    <div class="form-group mb-3">
      <label for="signup-username" class="fw-bold">Username</label>
      <input
        type="text"
        id="signup-username"
        name="username"
        value="<%=editRegdata.username %>"
        class="form-control rounded-pill p-2"
        placeholder="Enter your username"
        required
      />
    </div>
    <div class="form-group mb-3">
      <label for="signup-email" class="fw-bold">Email</label>
      <input
        type="email"
        id="signup-email"
        name="email"
        value="<%=editRegdata.email %>"
        class="form-control rounded-pill p-2"
        placeholder="Enter your email"
        required
      />
    </div>
    <div class="form-group mb-3 position-relative">
      <label for="signup-password" class="fw-bold">Password</label>
      <div class="input-group">
        <input
          type="password"
          id="signup-password"
          name="password"
          value="<%=editRegdata.password %>"
          class="form-control rounded-pill p-2 pe-5"
          placeholder="Create a password"
          required
        />
        <span
          class="position-absolute end-0 top-50 translate-middle-y me-3 cursor-pointer"
          onclick="toggleSignUpPassword()"
        >
          <i id="signUpEyeIcon" class="fas fa-eye-slash"></i>
        </span>
      </div>
    </div>
    <div class="form-check mb-3">
      <input
        class="form-check-input"
        type="checkbox"
        id="termsCheck"
        required
      />
      <label class="form-check-label" for="termsCheck">
        I agree to the
        <a href="#" class="text-primary fw-bold">Terms & Conditions</a>
      </label>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">
        Sign Up
      </button>
    </div>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
